<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flapbird.MainPage"
             Shell.NavBarIsVisible="false">
    <AbsoluteLayout>

       <Grid>
              <Grid.GestureRecognizers>
              <TapGestureRecognizer Tapped="OnGridCliked"/>
              </Grid.GestureRecognizers>
       
     
        <!-- Fundo do jogo -->
        <Image Source="buracao.jpg" 
               AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
               Aspect="Fill"
               AbsoluteLayout.LayoutFlags="All" />

        <!-- Pássaro -->
        <Image x:Name="Bird"
               Source="bozo.png"
               WidthRequest="70"
               HeightRequest="120"
               AbsoluteLayout.LayoutBounds="0.1, 0.5, 50, 50"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- Cano superior -->
        <Image x:Name="TopPipe"
              BackgroundColor="AliceBlue"
               Source="torre.webp"
               HeightRequest="310"
               WidthRequest="130"
               AbsoluteLayout.LayoutBounds="1, 1, 600, 310"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- Cano inferior -->
        <Image x:Name="BottomPipe"
              BackgroundColor="AliceBlue"
               Source="torre.webp"
               HeightRequest="310"
               WidthRequest="130"
               Rotation="1"
               AbsoluteLayout.LayoutBounds="1, 1, 670, 270"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- Chão usando Frame -->
        <Image x:Name="chao"
               Source="black.avif"
                HeightRequest="290" 
               WidthRequest="1200"
               AbsoluteLayout.LayoutBounds="0, 1, 1, 0.1" 
               AbsoluteLayout.LayoutFlags="All"
               />

              <Label Text="Canos"
                     x:Name="labelScore"/>


        <!-- Grid de Game Over -->
        <Frame x:Name="GameOverGrid"
              IsVisible="true"  
              BackgroundColor="White"
              HorizontalOptions="Center"
              VerticalOptions="Center">

              <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGameOverClicked"/>
                     </Frame.GestureRecognizers>

            <Label Text="Game Over"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
           
        </Frame>
          </Grid>
    </AbsoluteLayout>
</ContentPage>
