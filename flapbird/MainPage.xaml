<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flapbird.MainPage"
             Shell.NavBarIsVisible="false">
    <AbsoluteLayout>
        <!-- Fundo do jogo -->
        <Image Source="bolso.jpg" 
               AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
               Aspect="Fill"
               AbsoluteLayout.LayoutFlags="All" />

        <!-- Pássaro -->
        <Image x:Name="Bird"
               Source="bozo.png"
               WidthRequest="50"
               HeightRequest="120"
               AbsoluteLayout.LayoutBounds="0.1, 0.5, 50, 50"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- Cano superior -->
        <Image x:Name="TopPipe"
               Source="sla.png"
               HeightRequest="310"
               WidthRequest="600"
               AbsoluteLayout.LayoutBounds="1, 0, 600, 310"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- Cano inferior -->
        <Image x:Name="BottomPipe"
               Source="ttt.png"
               HeightRequest="290"
               WidthRequest="670"
               Rotation="4"
               AbsoluteLayout.LayoutBounds="1, 1, 670, 170"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- Chão usando Frame -->
        <Image x:Name="chao"
               Source="ttt.png"
                HeightRequest="30" 
               WidthRequest="1200"
               AbsoluteLayout.LayoutBounds="0, 1, 1, 0.1" 
               AbsoluteLayout.LayoutFlags="All"
               />

        <!-- Grid de Game Over -->
        <Grid x:Name="GameOverGrid"
              IsVisible="False"  
              BackgroundColor="White"
              AbsoluteLayout.LayoutBounds="0.5, 0.5, 300, 200" 
              AbsoluteLayout.LayoutFlags="PositionProportional"
              HorizontalOptions="Center"
              VerticalOptions="Center">
            <Label Text="Game Over"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="Ui"/>
            </Grid.GestureRecognizers>
        </Grid>
    </AbsoluteLayout>
</ContentPage>
